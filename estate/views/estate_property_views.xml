<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view"> 
        <field name = "name"> estate_property_tree</field>
        <field name = "model">estate_property</field>
        <field name = "arch" type = "xml">
            <tree string="Property Tree">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property_form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Property form">
                <header>
                    <button string="Edit" name="edit_estate_property" />
                    <button string="Create" name="Create_estate_property" />
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="postcode" string="Postcode"/>
                            <field name="date_availability" string="Available From"/>   
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                        <field name="selling_price" string="Selling Price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden Area (sqm)"/>
                                <field name="garden_orientation" string="Garden Orientation"/>
                                <field name="available" string="available"/>
                                <field name="state" string="State"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate_property_search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <filter string="Available" name="available" domain="['|',('state', '=', 'New'),('state','=','Received')]"/>
                <filter string="postcode" name="postcode" context="{'group_by':'postcode'}"/>
                
                <separator/>
                
            </search>
        </field>
    </record>

</odoo>